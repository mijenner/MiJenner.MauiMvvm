<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiMvvm.Views.DetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:MauiMvvm.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodels="clr-namespace:MauiMvvm.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:DetailsViewModel">

    <StackLayout
        Padding="10"
        Orientation="Vertical"
        Spacing="10">
        <Label FontSize="Body" Text="{Binding AppName}" />
        <Label FontSize="Body" Text="{Binding CompanyName}" />
        <Label FontSize="Title" Text="Details about Item:" />
        <Entry FontSize="Body" Text="{Binding Item.Name}" />
        <Entry FontSize="Body" Text="{Binding Item.Description}" />
        <Label FontSize="Body" Text="{Binding Item.Id}" />

        <Button
            Command="{Binding GoBackCommand}"
            FontSize="Body"
            HorizontalOptions="Fill"
            Text="Go to main" />
    </StackLayout>

</ContentPage>
